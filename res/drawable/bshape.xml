<?xml version="1.0" encoding="utf-8"?>
<selector 
    xmlns:android="http://schemas.android.com/apk/res/android">
   
   <item 
    android:state_pressed="true">
    	<shape	
    	    android:shape="rectangle">
		<corners 
	    	    android:radius="4dp" />
		<stroke 
		    android:width="1dip"
		    android:color="#0000EF" />
		<gradient 
		    android:startColor="#909090"
		    android:endColor="#535353" />
	</shape>
    </item>
	
    <item>
        <shape 
	    android:shape="rectangle"  >
		<corners 
		    android:radius="4dp" />
		<stroke 
		    android:width="1dip"
		    android:color="#0000EE" />
		<gradient 
		    android:startColor="#909090"
		    android:endColor="#000000" />
        </shape>
    </item>
</selector>
